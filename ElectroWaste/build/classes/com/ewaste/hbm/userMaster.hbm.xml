<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ewaste.model">
	<class name="userMaster" table="tbl_user">
		<id name="id" column="user_id">
			<generator class="increment"></generator>
		</id>
		<property name="userName" column="user_name"></property>
		<property name="password" column="password"></property>
		<property name="emailId" column="email_id"></property>
		<property name="mobileNo" column="mobile_no"></property>
		<property name="userAddress" column="user_address"></property>
		<property name="role" column="role"></property>
		
	</class>
</hibernate-mapping>